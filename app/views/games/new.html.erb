<div class="container">
  <h1>New game</h1>
<div class="d-flex">
  <% @letters.each do |letter| %>
    <div d-flex flex-row><%= letter.capitalize %></div>
  <% end %>
</div>


<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label>What is the longest word you can find?</label>

  <div class="input-group-append" >
    <input type="text" name="word" class="form-control">
    <input class="btn btn-primary px-4" type="submit" value="Play">
  </div>
</form>

</div>

